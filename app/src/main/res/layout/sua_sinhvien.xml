<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bginfor"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFF00"
        android:gravity="center_horizontal"
        android:text="SỬA SINH VIÊN"
        android:textSize="25sp"
        android:textStyle="bold" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView_avata_edit"
            android:layout_gravity="center_horizontal"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/avatamacdinh" />
        <Button
            android:id="@+id/btnReviewSuaSV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_ui"
            android:shadowColor="#0022A8"
            android:shadowDx="-1"
            android:shadowDy="-5"
            android:shadowRadius="15"
            android:text="Xem ảnh"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="16dp"/>
    </LinearLayout>



    <EditText
        android:id="@+id/edMaSvedit"

        android:inputType="textVisiblePassword"
        android:ems="10"
        android:scrollHorizontally="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mã sinh viên" />

    <EditText
        android:id="@+id/edTenSvedit"

        android:inputType="textVisiblePassword"
        android:ems="10"
        android:scrollHorizontally="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tên sinh viên" />

    <EditText
        android:id="@+id/edemail"

        android:inputType="textVisiblePassword"
        android:ems="10"
        android:scrollHorizontally="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập email" />
    <EditText
        android:id="@+id/edhinh"

        android:inputType="textVisiblePassword"
        android:ems="10"
        android:scrollHorizontally="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tên hình" />
    <Spinner
        android:id="@+id/spEdmalop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:weightSum="3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnEdSua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_ui"
            android:shadowColor="#0022A8"
            android:shadowDx="-1"
            android:shadowDy="-5"
            android:shadowRadius="15"
            android:text="Sửa"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btnEdNhapLai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_ui"
            android:shadowColor="#0022A8"
            android:shadowDx="-1"
            android:shadowDy="-5"
            android:shadowRadius="15"
            android:text="Nhập lại"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="16dp" />
        <Button
            android:id="@+id/btnHuyeditSV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg_ui"
            android:shadowColor="#0022A8"
            android:shadowDx="-1"
            android:shadowDy="-5"
            android:shadowRadius="15"
            android:text="Huỷ"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="16dp" />

    </LinearLayout>

</LinearLayout>