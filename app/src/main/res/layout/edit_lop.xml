<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutSuaLop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FF6D00"
    android:gravity="center"
    android:padding="10dp"
    app:cardElevation="7dp"
    tools:context="com.example.kma.ThemLopActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bginfor"
        android:orientation="vertical"
        android:padding="5dp"
        android:scrollHorizontally="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:scrollHorizontally="true"
            android:text="SỬA LỚP"
            android:textColor="#FFFF00"
            android:textSize="30dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edteditMaLop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:scrollHorizontally="true"
            android:hint="Nhập mã lớp"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/edteditTenLop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollHorizontally="true"
            android:ems="10"
            android:hint="Nhập tên lớp"
            android:inputType="textPersonName"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal"
            android:weightSum="2">
            >

            <Button
                android:id="@+id/btnCapNhat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_ui"
                android:shadowColor="#0022A8"
                android:shadowDx="-1"
                android:shadowDy="-5"
                android:shadowRadius="15"
                android:text="Cập nhật"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btnXemlop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_ui"
                android:shadowColor="#0022A8"
                android:shadowDx="-1"
                android:shadowDy="-5"
                android:shadowRadius="15"
                android:text="Xem lớp"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="16dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>